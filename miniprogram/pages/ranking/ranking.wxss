/* pages/ranking/ranking.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.header {
  text-align: center;
  padding: 40rpx 0;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.ranking-list {
  margin-top: 20rpx;
}

.ranking-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.ranking-item.top-three {
  border: 2rpx solid #d32f2f;
}

.rank-number {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.rank-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #999;
}

.medal {
  width: 60rpx;
  height: 60rpx;
}

.item-content {
  flex: 1;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.dept-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.rank-badge {
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.item-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stat {
  display: flex;
  flex-direction: column;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #d32f2f;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #d32f2f 0%, #ff6b6b 100%);
  border-radius: 6rpx;
  transition: width 0.3s;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
