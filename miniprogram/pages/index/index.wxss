/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.user-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.avatar-placeholder {
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.department {
  font-size: 24rpx;
  color: #999;
}

.sync-btn {
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  color: #fff;
  border-radius: 50rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.steps-card {
  text-align: center;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-date {
  font-size: 24rpx;
  color: #999;
}

.steps-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 20rpx;
}

.steps-number {
  font-size: 96rpx;
  font-weight: bold;
  color: #d32f2f;
}

.steps-unit {
  font-size: 36rpx;
  color: #666;
  margin-left: 10rpx;
}

.distance-info {
  font-size: 28rpx;
  color: #666;
}

.week-card {
  margin-bottom: 20rpx;
}

.week-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #d32f2f;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.ranking-card,
.progress-card {
  margin-bottom: 20rpx;
}

.more {
  font-size: 24rpx;
  color: #999;
}

.ranking-info {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.rank-badge {
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  color: #fff;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  margin-right: 30rpx;
}

.rank-number {
  font-size: 28rpx;
  font-weight: bold;
}

.ranking-details {
  display: flex;
  flex-direction: column;
}

.dept-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.dept-steps {
  font-size: 24rpx;
  color: #666;
}

.progress-info {
  margin-top: 30rpx;
}

.progress-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #d32f2f;
  margin-bottom: 20rpx;
  text-align: center;
}

.progress-bar {
  width: 100%;
  height: 20rpx;
  background: #e0e0e0;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #d32f2f 0%, #ff6b6b 100%);
  border-radius: 10rpx;
  transition: width 0.3s;
}

.progress-distance {
  display: block;
  font-size: 24rpx;
  color: #666;
  text-align: center;
}
