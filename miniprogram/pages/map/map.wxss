/* pages/map/map.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.overview-card {
  margin-bottom: 20rpx;
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.overview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.overview-percent {
  font-size: 48rpx;
  font-weight: bold;
  color: #d32f2f;
}

.overview-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.overview-item {
  text-align: center;
}

.overview-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.overview-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.progress-bar-large {
  width: 100%;
  height: 30rpx;
  background: #e0e0e0;
  border-radius: 15rpx;
  overflow: hidden;
}

.progress-fill-large {
  height: 100%;
  background: linear-gradient(90deg, #d32f2f 0%, #ff6b6b 100%);
  border-radius: 15rpx;
  transition: width 0.3s;
}

.location-card {
  margin-bottom: 20rpx;
}

.location-header {
  margin-bottom: 30rpx;
}

.location-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.current-location {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.location-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.location-distance {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.next-location {
  text-align: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.next-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.next-distance {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #d32f2f;
}

.route-card {
  margin-bottom: 20rpx;
}

.route-header {
  margin-bottom: 30rpx;
}

.route-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.route-timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline-item {
  position: relative;
  padding-bottom: 40rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -40rpx;
  top: 0;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #e0e0e0;
  border: 4rpx solid #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.timeline-item.completed .timeline-dot {
  background: #d32f2f;
}

.dot-inner {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #fff;
}

.timeline-content {
  margin-left: 20rpx;
}

.timeline-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.timeline-item.completed .timeline-name {
  color: #d32f2f;
}

.timeline-distance {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.timeline-line {
  position: absolute;
  left: -28rpx;
  top: 24rpx;
  width: 2rpx;
  height: calc(100% - 24rpx);
  background: #e0e0e0;
}

.timeline-item.completed .timeline-line {
  background: #d32f2f;
}

.dept-card {
  margin-bottom: 20rpx;
}

.dept-header {
  margin-bottom: 20rpx;
}

.dept-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.dept-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.dept-distance,
.dept-percent {
  font-size: 28rpx;
  color: #666;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #d32f2f 0%, #ff6b6b 100%);
  border-radius: 6rpx;
  transition: width 0.3s;
}
